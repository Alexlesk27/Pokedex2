<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9cfca9">


    <ImageView
        android:id="@+id/backdrop_path"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/pokemonlog"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/backdrop_path"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="139dp"
        android:src="@drawable/pokemon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_detail"
        android:layout_alignStart="@+id/image_detail"
        android:layout_alignEnd="@+id/image_detail"
        android:layout_marginStart="-127dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-135dp"
        android:fontFamily="@font/silkscreenbold"
        android:lineSpacingExtra="3dp"
        android:text="pikachu"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_detail"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleDetail"
        android:layout_alignStart="@+id/image_detail"
        android:layout_alignEnd="@+id/image_detail"
        android:layout_marginStart="-140dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="-139dp"
        android:lineSpacingExtra="3dp"
        android:text="Descrição"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/descripition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descricao"
        android:layout_alignStart="@+id/image_detail"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-122dp"
        android:layout_marginEnd="-1dp"
        android:lineSpacingExtra="3dp"
        android:text="     Pikachu que pode gerar eletricidade poderosa  tem bolsas nas bochechas que são extra macias e super elásticas."
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />


</RelativeLayout>
