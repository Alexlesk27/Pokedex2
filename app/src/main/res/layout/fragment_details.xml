<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9cfca9">

    <ImageView
        android:id="@+id/backdrop_path"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0.8"
        android:src="@drawable/pokemonlog"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/backdrop_path"
        android:layout_marginTop="-11dp"
        android:src="@drawable/pokemon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_detail"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/silkscreenbold"
        android:textAlignment="center"
        android:text = "pikachu"
        android:layout_toEndOf="@+id/image_detail"
        android:lineSpacingExtra="3dp"
        android:textColor="#F44336"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_detail"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_detail"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="3dp"
        android:text="Data de lançamento"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/releaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Date"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/releaseDate"
        android:lineSpacingExtra="3dp"
        android:text="Média de votos"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/voteAverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vote"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voteAverage"
        android:lineSpacingExtra="3dp"
        android:text="Descrição"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />


    <TextView
        android:id="@+id/descripition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descricao"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />


</RelativeLayout>
